<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Socios</title>
    <%- include('t-dependencias-head') %>
    
</head>
<body>
    <%- include('t-navegador') %>
    <div class="container encabezado mt-5 mb-5">
        <div  style="display: flex; gap: 2rem;">
           
                <h1>Socios</h1>

                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalAgregar">
                    <i class="bi bi-plus-circle-fill"></i>
                Nuevo
                </button>           
        </div>     
    </div>
    <hr />
    


<!-- MODAL: AGREGAR NUEVO -->
<div class="modal fade" id="modalAgregar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Agregar nuevo socio</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <form method="POST" action="/socio-agregar" id="formulario-agregar">
                
                <div class="form-group">                
                    <label for="nombre">Nombre</label>
                    <input name="nombre" class="form-control" type="text"><br>

                    <label for="apellido">Apellido</label>
                    <input name="apellido" class="form-control" type="text"><br>

                    <label for="dni">DNI</label>
                    <input name="dni" class="form-control" type="text"><br>

                    <label for="telefono">Teléfono</label>
                    <input name="telefono" class="form-control" type="text"><br>

                    <label for="email">E-mail</label>
                    <input name="email" class="form-control" type="text"><br>

                    <label for="nacimiento">Fecha Nacimiento</label>
                    <input name="nacimiento" class="form-control" type="date"><br>

                    <label for="alta">Fecha de Alta</label>
                    <input name="alta" class="form-control" type="date"><br>                   

                    
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button class="btn btn-primary" type="submit">Registrar</button>
                </div>
            </form>
        </div>
      </div>
    </div>
</div>


<!--   MODAL EDITAR -->

<div class="modal fade" id="modalEditar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Editar</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <form method="POST" action="/socio-editar" id="formulario-editar">
                <input type="hidden" name="id" value="" id="formulario-editar-id">

                <div class="form-group">        
                    <label for="nombre">Nombre</label>
                    <input name="nombre" class="form-control" type="text" id="formulario-editar-nombre"><br>

                    <label for="apellido">Apellido</label>
                    <input name="apellido" class="form-control" type="text" id="formulario-editar-apellido"><br>

                    <label for="dni">DNI</label>
                    <input name="dni" class="form-control" type="text" id="formulario-editar-dni"><br>

                    <label for="telefono">Teléfono</label>
                    <input name="telefono" class="form-control" type="text" id="formulario-editar-telefono"><br>

                    <label for="email">E-mail</label>
                    <input name="email" class="form-control" type="text" id="formulario-editar-email"><br>

                    <label for="nacimiento">Fecha Nacimiento</label>
                    <input name="nacimiento" class="form-control" type="date" id="formulario-editar-nacimiento"><br>

                    <label for="alta">Fecha de Alta</label>
                    <input name="alta" class="form-control" type="date" id="formulario-editar-alta"><br>                  
                
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button class="btn btn-primary" type="submit">Editar</button>
                </div>
            </form>
        </div>
      </div>
    </div>
</div>



<!-- PRINCIPAL -->
 
<div class="container mt-5">
    <div class="row justify-content-center">
        <div>

            <h3 class="bg-dark text-white px-4 py-2">Listado de Socios</h3>

            <table class="table table-striped">
                <thead>
                  <tr>
                    <th>Id</th>
                    <th>Nombre, Apellido</th>
                    <th>DNI</th>
                    <th>Teléfono</th>
                    <th>E-mail</th>
                    <th>Fecha Nacimiento</th>
                    <th>Fecha Alta</th>
                    <th></th>
                  </tr>
                </thead>

                <tbody>
                   
                    
                    <% for (let i = 0; i < socios.length; i++) { %>
                        <tr>
                            <%           
                    

                            var idsocio = socios[i].id_socio;
                            var nombre = socios[i].nombre;
                            var apellido = socios[i].apellido;
                            var dni = socios[i].dni;
                            var telefono = socios[i].telefono;
                            var email = socios[i].email;
                            var nacimiento = socios[i].fechanacimiento;
                            var alta = socios[i].fechaalta;

                            var nacimiento =  nacimiento.toLocaleString();
                            var nacimiento = nacimiento.split(',')[0];

                            var alta = alta.toLocaleString();
                            var alta = alta.split(',')[0];


                                                     
                            %>

                            <td> <%= idsocio %></td>                            
                            <td><%= nombre %>, <%= apellido %></td>
                            <td> <%= dni %></td>
                            <td> <%= telefono %></td>
                            <td> <%= email %></td>
                            <td> <%= nacimiento %></td>
                            <td> <%= alta %></td>
                            <td>
                                <a href="/socio-borrar/<%= idsocio %>">
                                <button type="button" class="btn btn-danger">
                                    <i class="bi bi-trash"></i>
                                </button></a>

                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalEditar" onclick="formularioeditar('<%= idsocio %>', '<%= nombre %>' , '<%= apellido %>', '<%= dni %>', '<%= telefono %>', '<%= email %>', '<%= nacimiento %>', '<%= alta %>')">
                                    <i class="bi bi-pencil"></i>
                                </button>
                            </td>
                        </tr>
                        <% } %>                  

                </tbody>
            </table>
              
        </div>
    </div>
</div>
      

<!-- SCRIPTS -->
<%- include('t-dependencias-footer') %>


<!-- SCRIPTS -->      
<script>
        

         var editarFormulario = document.getElementById('formulario-editar');
        var editarCampoId = document.getElementById('formulario-editar-id');
        var editarCampoNombre = document.getElementById('formulario-editar-nombre');
        var editarCampoApellido = document.getElementById('formulario-editar-apellido');
        var editarCampoDni = document.getElementById('formulario-editar-dni');
        var editarCampoTelefono = document.getElementById('formulario-editar-telefono');
        var editarCampoEmail = document.getElementById('formulario-editar-email');
        var editarCampoNacimiento = document.getElementById('formulario-editar-nacimiento');
        var editarCampoAlta = document.getElementById('formulario-editar-alta');
        
        function formularioeditar(id, nombre, apellido, dni, telefono, email, nacimiento, alta){
            editarCampoId.value = id;
            editarCampoNombre.value = nombre;  
            editarCampoApellido.value = apellido;
            editarCampoDni.value = dni;
            editarCampoTelefono.value = telefono; 
            editarCampoEmail.value = email;
            editarCampoNacimiento.value = nacimiento;
            editarCampoAlta.value = alta;
            
        } 
</script>

    
</body>
</html>